@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    tr {
        border-bottom: 3px solid lightgray;
    }

    th {
        margin-right: 5px;
        margin-left: 5px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Заявки на регистрацию</h2>
            <table>
                <tr>
                    <th>
                        Номер заявки
                    </th>
                    <th>
                        Имя
                    </th>
                    <th>
                        Роль
                    </th>
                    <th>
                        Документ
                    </th>
                </tr>
                @foreach (PIS_Project.Models.DataClasses.Users nowU in ViewBag.List)
                {

                    <tr>
                        <form method="post" action="Confirm\">

                            <td>
                                <div style="width:80px;">
                                    @Html.DisplayFor(viewer => nowU.ID)
                                </div>
                            </td>
                            <td>
                                <div style="width:200px;">
                                    @Html.DisplayFor(viewer => nowU.FIO)
                                </div>
                            </td>
                            <td>
                                <div style="width:170px;">
                                    <select name="role">
                                        @foreach (var ds in (new PIS_Project.Models.DataClasses.UsersRegister()).AllRole)
                                        {
                                            <option value="@ds.Key">@ds.Value</option>
                                        }
                                    </select><br />
                                    <input hidden value="@nowU.ID" name="ID" />
                                    <input type="submit" value="Одобрить" class="btn btn-success col-lg-7 col-md-12" style="background-color: #aebfbe; border-color: #aebfbe; margin-top:10px" />
                            
                                    </div>
                                 </td>
                            <td>
                                @if (nowU.Doc != null)
                                {
                                    <div style="height:500px; width: 700px;">
                                        <iframe src="data:application/pdf;base64,@Convert.ToBase64String(nowU.Doc)" height="100%" width="100%"></iframe>
                                    </div>
                                }
                            </td>

                            @***<td>
                                <input hidden value="@nowU.ID" name="ID" />
                                <input type="submit" value="Одобрить" class="btn btn-success col-lg-2 col-md-12" style = "background-color: #aebfbe; border-color: #aebfbe;"/>
                            </td>**@

                        </form>

                    </tr>
                }

            </table>
        </div>

    </div>
</div>